<% provide(:title, 'Create Post') %>
<h1>New Post</h1>

<div class="row">
   <div class="span6 offset3">
      <%= form_for(@post) do |f| %>
         <%= render 'shared/error_messages', object: f.object %>

         <%= f.label :title %>
         <%= f.text_field :title %>

         <%= f.label :content %>
         <%= f.text_area :content, size:1000 %>

         <%= f.check_box :news %>
         <%= f.label :news, class: 'checkbox inline' %>
         </br>

         <%= f.check_box :blog %>
         <%= f.label :blog, class: 'checkbox inline' %>
         </br>

         <%= f.check_box :training %>
         <%= f.label :training, class: 'checkbox inline' %>
         </br>

         <%= f.check_box :nutrition %>
         <%= f.label :nutrition, class: 'checkbox inline' %>
         </br>

         <%= f.check_box :supplements %>
         <%= f.label :supplements, class: 'checkbox inline' %>
         </br>
         </br>

         <%= f.submit "Create post", class: "btn btn-large btn-primary" %>
      <% end %>
   </div>
</div>